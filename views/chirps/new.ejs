<header>
    <link rel="stylesheet" href="/css/chirps.css">
</header>

<div class = "form-data">
    <form action ="/chirps/create" method ="POST">
    <label for="txtFirstName">First Name: </label>
    <input type="text" name="first" id="txtFirstName" autofocus required>

    <label for="txtLastName">Last Name:</label>
    <input type="text" name="last" id="txtLastName" required>

    <label for="txtUsername">Username: </label>
    <input type="text" name="user" id="txtUsername" required>

    <label for="txtPost">Post: </label>

    <textarea name="chirpBody" id="txtPost" cols="44" rows="4" required></textarea>

    <button type="submit">Create</button>
    </form>
</div>