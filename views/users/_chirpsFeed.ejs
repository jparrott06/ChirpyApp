          <% if(chirp.user.toString() == currentUser._id.toString()) { %>
            <a class="button" href="<%= `/chirps/${chirp._id}/edit` %>">Edit</a>
            <a class="button" href="<%= `/chirps/${chirp._id}/delete?_method=DELETE` %>" 
                onclick="return confirm(`Are you sure?`)">Delete</a>
          <% } %>
        </div>
        <div class="post__headerDescription">
          <center>
            <p><%= chirp.chirpBody %></p>
          </center>
        </div>
      </div>
      
      <div class="post__footer">
        
        <i class="fa fa-comment" data-id="<%=`${chirp._id}`%>" onclick="alert('Coming Soon!')"></i>
        <i class="fa fa-retweet" onclick="alert('Coming Soon!')"></i>
