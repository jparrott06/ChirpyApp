<header>
    <script src="/js/home.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="//code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
  </header>
  <% chirps.forEach(chirp => { %>
  <div class="post">
    <!-- <a href="<%=`/users/${chirp.user._id}`%>"> -->
      <div class="post__avatar">
        <% if(user.Gender == 'male') { %>
        <img src="/images/img_avatar.png" alt="Avatar" class="avatar">
          <% } else { %>
        <img src="/images/img_avatar2.png" alt="Avatar" class="avatar">
        <% } %>
  
      </div>
  
      <div class="post__body">
        <div class="post__header">
          <div class="post__headerText">
            <h3> <%=user.FirstName%> <%=user.LastName%> <span class="post__headerSpecial">@<%=user.Username%></span>
            </h3>
          <!-- </a> -->
            <% if(chirp.user.toString() == currentUser._id.toString()) { %>
              <a class="card-button" href="<%= `/chirps/${chirp._id}/edit` %>">Edit</a>
              <a class="card-button" href="<%= `/chirps/${chirp._id}/delete?_method=DELETE` %>" 
                  onclick="return confirm(`Are you sure?`)">Delete</a>
            <% } %>
          </div>
          <div class="post__headerDescription">
            <center>
              <p><%= chirp.chirpBody %></p>
            </center>
          </div>
        </div>
        
        <div class="post__footer">
          
          <i class="fa fa-comment" onclick="alert('coming soon!')"></i>
          <i class="fa fa-retweet" onclick="alert('coming soon!')"></i>
          <i class="fa fa-heart" onclick="alert('coming soon!')"></i>
          <i class="fa fa-share" onclick="alert('coming soon!')"></i>
        </div>
      </div>
  
    </div>
    <% }) %>