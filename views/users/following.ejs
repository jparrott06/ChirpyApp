<!DOCTYPE HTML>
<html lang="en">

<head>
  <link href="favicon.ico" rel="icon" type="image/x-icon">
  <link rel="stylesheet" href="/css/home.css">
  <script src="/js/home.js"></script>
  <script src="/js/ChirpsFeed.js"></script>
  <header>
    <title>Chirpy Home Page</title>
  </header>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="//code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
  <script>
    // $(function () {
    //   $('#header').load('header.html');
    // });
    // $(function () {
    //   $('#table-follow').load('table.html');
    // });
    $(function () {
      $('#right-hand').load('right-hand-col.html');
    });
  </script>
</head>

<body style="background-color: black">

  <div class="row">

    <div class="col-lg-3 col-md-3">
      <div id="header"></div>
    </div>

    <div class="col-lg-5 col-md-9 col-sm-12">
      <div class="feed__header">
        <h2>@ <%=currentUser.Username%>'s Notifications</h2>
      </div>

      <header>
        <script src="/js/home.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="//code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
          crossorigin="anonymous"></script>
      </header>
      <% notifications.forEach(notification => { %>
      <div class="post">
          <div class="post__avatar">
            <% if(notification.followingInfo.Gender == 'male') { %>
            <img src="/images/img_avatar.png" alt="Avatar" class="avatar">
              <% } else { %>
            <img src="/images/img_avatar2.png" alt="Avatar" class="avatar">
            <% } %>
      
          </div>
      
          <div class="post__body">
            <div class="post__header">
              <div class="post__headerText">
                <h3> <%=notification.followingInfo.FirstName%> <%=notification.followingInfoLastName%> <span class="post__headerSpecial">@<%=notification.followingInfo.Username%></span>
                </h3>
              </div>
              <div class="post__headerDescription">
                <center>
                  <p><%= notification.followingChirp.chirpBody %></p>
                  <!-- <script>getRandomImage()</script>
                  <span id="result" align="center"> </span> -->
                </center>
              </div>
            </div>
      
            <!-- <center><img src="/images/mockImage.gif" alt="gif"></center> -->
            
            
            <div class="post__footer">
              
              <i class="fa fa-comment"></i>
              <i class="fa fa-retweet"></i>
              <i class="fa fa-heart"></i>
              <i class="fa fa-share"></i>
            </div>
          </div>
      
        </div>
        <% }) %>


    </div>




<div class = 'rightside'>
    <div class="col-lg-3 hidden-md hidden-sm hidden-xs">
      <div class="search-box" id="box">
        <table class="search-contents">
          <tr>
            <td id="searchicon_td" style="background-color: rgb(49, 45, 45);">
              <i class="fa fa-search searchIcon" id='searchicon'></i>
            </td>
            <td>
              <input class="search" type="text" onclick="myFunction()" name="" id="searchinput"
                placeholder="Search Chirpy">
            </td>
          </tr>
        </table>
      </div>

      <div class="newsfeed">
        <table class="followers">
          <thead>
            <tr>
              <th id="first">Trending Now</th>
            </tr>
          </thead>
      <%- include('./_trendingFeed') %>

      <thead>
        <tr>
          <a href="#">
            <th id="fifth">Show more</th>
          </a>
        </tr>
      </thead>
    </table>
    </div>




      <div class="follow">
        <table class="followers">
          <thead>
            <tr>
              <th id="first">Who to follow</th>
            </tr>
          </thead>

          <%- include('./_usersFeed') %>


          <thead>
            <tr>
              <a href="#">
                <th id="fifth">Show more</th>
              </a>
            </tr>
          </thead>
        </table>
        <footer>
          <ul class="foot">
              <li><center><a href="#" id="footnotes">Privacy Policy </a> <bold id="dot"> &#183; </bold><a href="#" id="footnotes">Copyright &#169; 2021 Chirpy&#8482;</a></center></li>
          </ul>
        </footer>
      </div>


    </div>

  </div>
  </div>
</div>
</body>
<script src="/js/follow.js"></script>
</html>