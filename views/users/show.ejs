<header>
    <link rel="stylesheet" href="/css/users.css">
    <script src="/js/users.js"></script>
</header>
<body style="background-image:url(/images/chirpyBackground.jpg);">
<div class="card">
    
        <% if(user.Gender == 'male') { %>
            <img src="/images/img_avatar.png" alt="Avatar" class="avatar">
              <% } else { %>
            <img src="/images/img_avatar2.png" alt="Avatar" class="avatar">
            <% } %>


    <h1><%= user.fullName %></h1>
    <ul>
    <li>Username: <%= user.Username %> </li>
    <li>Gender: <%= user.Gender %></li>
    <li>Location: <%= user.Location %></li>
    <li>Email: <%= user.Email %></li>
    <li>Date of Birth: <%= user.DoB.toDateString() %></li>
    <li>Bio: <%= user.Bio %></li>
    
    </ul>
    <!-- <a href="<%= `/users/home/` %>">Home</a> -->

    <% if (user._id.toString() == currentUser._id.toString()) { %>
    <a href="<%=`/users/${user._id}/edit`%>"><p><button class="card-button">Update Profile</button></p></a>
    <% } %>
    <a href="<%=`/users/home`%>"><p><button class="card-button">Return to Home</button></p></a>
  </div>

</body>